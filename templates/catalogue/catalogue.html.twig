{% block title %}Hello CatalogueController!{% endblock %}

{% block body %}

      {% block naavbarLinks %}
         {% if role is defined and role == "ROLE_ADMIN" %}
            {% block Gestionnaire %}{{parent()}}{% endblock %}

         {% elseif role is defined and role == "ROLE_CLIENT" %}
            {% block Client %}{{parent()}}{% endblock %}
         {% endif %}

      {% endblock %}
      
