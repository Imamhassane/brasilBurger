{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% block naavbarLinks %}{% endblock %}
    {% block login %}

         {% if role is defined and role != "" %}
            {% block logout %}{{parent()}}{% endblock %}

         {% else %}

            {% block loginSignIn %}{{parent()}}{% endblock %}
         {% endif %}

      {% endblock %}
    <div class="form-container">
        <form method="post" class="form-login" id="form">
            <div class="d-flex mb-5">
                <a name="" id="" class="btn m-3 pl-5" href="{{path('catalogue')}}" role="button"><i class="fa-solid fa-circle-left"></i> <span>Catalogue</span></a>
                <h1 class="h3 mb-3 font-weight-bold">Login form</h1>
            </div>
            {% if error %}
                <div class="alert alert-danger">Login ou mot de pass incorrect</div>
            {% endif %}
            <div class="control">
                <label for="inputEmail">Email</label>
                <input type="text" value="{{ last_username }}" name="email" id="email" class="box" data-aos="zoom-in-down" autocomplete="email" autofocus>
                <small></small>
            </div>
            <div class="control">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="password" class="box" data-aos="zoom-in-down" autocomplete="current-password" >
                <small></small>
            </div>

            <input type="hidden" data-aos="zoom-in-down" data-aos-delay="600" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <input data-aos="zoom-in-down" data-aos-delay="600" type="submit" value="S'inscrire" class="btn">
        </form>  
    </div>


    {% block js %}
        <script src="js/login.js"></script>
    {% endblock %}
{% endblock %}
