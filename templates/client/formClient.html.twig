{% extends 'base.html.twig' %}
{% block body %}
    {% block naavbarLinks %}{% endblock %}
    {% block login %}

         {% if role is defined and role != "" %}
            {% block logout %}{{parent()}}{% endblock %}

         {% else %}

            {% block loginSignIn %}{{parent()}}{% endblock %}
         {% endif %}

      {% endblock %}
    <div>  
        <form id="form" class="form-signin" method="post" action="{{path('newClient')}}">    
            <div class="d-flex">
                <a name="" id="" class="btn m-3 pl-5" href="{{path('catalogue')}}" role="button"><i class="fa-solid fa-circle-left"></i> <span>Catalogue</span></a>
                <h1 class="h3 mb-3 font-weight-bold">Devenez client chez Brasil Burger !</h1>             
            </div>
            <div>
                <p style="font-size: 14px;color: red;text-align:center; margin-bottom:15px">{{error is defined ? error : ''}}</p>
            </div>
            <div class="row">
                <div class="control col-md-6">
                    <label for="prenom">Prenom</label>
                    <input type="text"  name="prenom" id="prenom" value = "{{restorPrenom is defined ? restorPrenom : ''}}" class="box" autofocus>
                    <small></small>
                </div>
                <div class="control col-md-6">
                    <label for="nom">Nom</label>
                    <input type="text" name="nom" id="nom" class="box"  value = "{{restorNom is defined ? restorNom : ''}}">
                    <small></small>
                </div>
            </div>  

            <div class="row">
                <div class="control col-md-6">
                    <label for="email">Email</label>
                    <input type="text"  name="email" id="email" class="box" value="{{restorNom is defined ? restorNom : ''}}" >
                    <small></small>
                    <p style="font-size: 14px;color: red;margin-left: 4px;">{{emailExist is defined ? emailExist : ''}}</p>
                </div>
                <div class="control col-md-6">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="box"  value = "{{restorPassword is defined ? restorPassword : ''}}">
                    <small></small>
                </div>
            </div> 
            <div class="row ">
                <div class="control col-md-12">
                    <label for="telephone">Telephone</label>
                    <input type="number"  name="telephone" id="telephone" class="box"  value = "{{restorTelephone is defined ? restorTelephone : ''}}">
                    <small></small>
                </div>
            </div>
            <input type="submit" value="S'inscrire" class="btn" >
        </form>
    </div>
    {% block js %}
        <script src="js/register.js"></script>
    {% endblock %}
    <style>#singinButton{background-color:#eacf4f;color:#000;}</style>
    
{% endblock %}
