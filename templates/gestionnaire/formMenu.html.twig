{% extends 'base.html.twig' %}
{% block body %}
    {% block naavbarLinks %}
            {% block Gestionnaire %}{{parent()}}{% endblock %}
            {% block Client %}{% endblock %}

    {% endblock %}

    {% block login %}
        {% block loginSignIn %}{% endblock %}
        {% block logout %}{{parent()}}{% endblock %}
    {% endblock %}
    <div class="form-container">  
        {# <form class="form-add-menu" id="form" method="post" action="{{path('addMenu')}}"> #}
        {{form_start(form , {'attr': {"id":"form" , "class":"form-add-menu" } } )}}  
            <div class="d-flex">
                <a name="" id="" class="btn m-3 pl-5" href="{{path('catalogue')}}" role="button"><i class="fa-solid fa-circle-left"></i> <span>Catalogue</span></a>
            </div>
            <div class="row">
                <div class="control col-md-12">
                    <label> Que voulez vous ajouter </label>
                    <select class="checked" id="checked" name="checked">
                        <option value="notCheched">Choisir...</option>
                        <option value="burger" id="burger">Burger</option>
                        <option value="menu" id="menu">Menu</option>
                        <option value="complement" id="complement">Complement</option>
                    </select>
                    <small class="notChecking">Veuillez choisir l'élément à ajouter!</small>
                </div>  
            </div> 
            <div class="row">
                <div class="control col-md-12">
                   <label for="nom">Nom</label>
                    <input type="text" name="nom" id="nom" class="box" data-aos="zoom-in-down"  data-aos-delay= "300" >
                    <small></small>
                </div>
            </div>  
            <div class="row">
                <div class="control col-md-12" id="divPrix">
                    <label for="prix">Prix</label>
                    <input type="number" name="prix" id="prix" class="box" data-aos="zoom-in-down"  data-aos-delay= "300" >
                    <small></small>
                </div>
            </div>
            <div id="ajoutMenu">
                <div class="row">
                    <div class="control col-md-12">
                        <label> ajouter un burger au menu </label>
                        <select class="checked" id="burgerChecked" name="burgerName">
                            <option value="">Choisir...</option>
                            {% for item in allBurger %}
                                <option value="{{item.id}}">{{item.nom}}</option>
                            {% endfor %}
                        </select>
                        <small id="errorBurger">Veuillez ajouter un burger!</small>
                    </div>  
                </div> 
                <div class="row">
                    <div class="control col-md-12">
                        <label> ajouter des compléments au menu </label>
                        {% for item in allComplement %}
                            <div class="form-check mt-3 ml-4">
                                <input type="checkbox" class="form-check-input" name="complementName" id="complemntChecked~{{item.id}}" value="{{item.id is defined ? item.id : '' }}" >
                                <label class="form-check-label" style="margin: 1px;margin-left: 8px;" for="complemntChecked~{{item.id}}">{{item.nom}}</label>
                            </div>
                        {% endfor %}
                        {% if errorComplement is defined  %}
                            <small id="errorComplement">{{errorComplement}}</small>
                        {% endif %}
                    </div>  
                </div> 
            </div> 
            <div class="row">
                <div class="control col-md-12">
                    {{form_row(form.image,{'attr': {"class":"box" , "data-aos":"zoom-in-down" , "value":"",  "data-aos-delay":"300"} } )}}
                    <small id="errorImage">Veuillez ajouter une image </small>
                </div>
            </div> 
            <input type="submit" value="Ajouter" class="btn" data-aos="" data-aos-delay= "600">
        {{form_end(form)}}  
   
    </div>
    {% block js %}
        <script src="js/addFoods.js"></script>
    {% endblock %}
    
{% endblock %}
